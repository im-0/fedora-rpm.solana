From 43492f2b8a61e81b1c718704e0f1a4331d909f8d Mon Sep 17 00:00:00 2001
From: Ivan Mironov <mironov.ivan@gmail.com>
Date: Thu, 18 Feb 2021 17:17:32 +0500
Subject: [PATCH 1/2] Replace bundled C/C++ libraries with system provided

---
 Cargo.lock                  | 11 +----------
 account-decoder/Cargo.toml  |  2 +-
 remote-wallet/Cargo.toml    |  2 +-
 runtime/Cargo.toml          |  2 +-
 storage-bigtable/Cargo.toml | 10 +---------
 5 files changed, 5 insertions(+), 22 deletions(-)

diff --git a/Cargo.lock b/Cargo.lock
index 83348397d450..949b869c11bf 100644
--- a/Cargo.lock
+++ b/Cargo.lock
@@ -3142,15 +3142,6 @@ version = "0.1.4"
 source = "registry+https://github.com/rust-lang/crates.io-index"
 checksum = "28988d872ab76095a6e6ac88d99b54fd267702734fd7ffe610ca27f533ddb95a"
 
-[[package]]
-name = "openssl-src"
-version = "111.25.0+1.1.1t"
-source = "registry+https://github.com/rust-lang/crates.io-index"
-checksum = "3173cd3626c43e3854b1b727422a276e568d9ec5fe8cec197822cf52cfb743d6"
-dependencies = [
- "cc",
-]
-
 [[package]]
 name = "openssl-sys"
 version = "0.9.75"
@@ -3160,7 +3151,6 @@ dependencies = [
  "autocfg",
  "cc",
  "libc",
- "openssl-src",
  "pkg-config",
  "vcpkg",
 ]
@@ -8636,4 +8626,5 @@ checksum = "9fd07cbbc53846d9145dbffdf6dd09a7a0aa52be46741825f5c97bdd4f73f12b"
 dependencies = [
  "cc",
  "libc",
+ "pkg-config",
 ]
diff --git a/account-decoder/Cargo.toml b/account-decoder/Cargo.toml
index 9e2aee386629..ffa7d5598483 100644
--- a/account-decoder/Cargo.toml
+++ b/account-decoder/Cargo.toml
@@ -25,7 +25,7 @@ solana-sdk = { path = "../sdk", version = "=1.15.2" }
 spl-token = { version = "=3.5.0", features = ["no-entrypoint"] }
 spl-token-2022 = { version = "=0.5.0", features = ["no-entrypoint"] }
 thiserror = "1.0"
-zstd = "0.11.2"
+zstd = { version = "0.11.2", features = ["pkg-config"] }
 
 [package.metadata.docs.rs]
 targets = ["x86_64-unknown-linux-gnu"]
diff --git a/remote-wallet/Cargo.toml b/remote-wallet/Cargo.toml
index 6f3b3953e2ec..29468dad0f2b 100644
--- a/remote-wallet/Cargo.toml
+++ b/remote-wallet/Cargo.toml
@@ -24,7 +24,7 @@ thiserror = "1.0"
 uriparse = "0.6.4"
 
 [features]
-default = ["linux-static-hidraw", "hidapi"]
+default = ["linux-shared-hidraw", "hidapi"]
 linux-static-libusb = ["hidapi/linux-static-libusb"]
 linux-static-hidraw = ["hidapi/linux-static-hidraw"]
 linux-shared-libusb = ["hidapi/linux-shared-libusb"]
diff --git a/runtime/Cargo.toml b/runtime/Cargo.toml
index 1b0f7e91f8f6..915e8d90d75f 100644
--- a/runtime/Cargo.toml
+++ b/runtime/Cargo.toml
@@ -63,7 +63,7 @@ symlink = "0.1.0"
 tar = "0.4.38"
 tempfile = "3.3.0"
 thiserror = "1.0"
-zstd = "0.11.2"
+zstd = { version = "0.11.2", features = ["pkg-config"] }
 
 [lib]
 crate-type = ["lib"]
diff --git a/storage-bigtable/Cargo.toml b/storage-bigtable/Cargo.toml
index 5b204d782d61..398b18a7a44c 100644
--- a/storage-bigtable/Cargo.toml
+++ b/storage-bigtable/Cargo.toml
@@ -34,16 +34,8 @@ solana-transaction-status = { path = "../transaction-status", version = "=1.15.2
 thiserror = "1.0"
 tokio = "1"
 tonic = { version = "0.8.2", features = ["tls", "transport"] }
-zstd = "0.11.2"
+zstd = { version = "0.11.2", features = ["pkg-config"] }
 
-# openssl is a dependency of the goauth and smpl_jwt crates, but explicitly
-# declare it here as well to activate the "vendored" feature that builds OpenSSL
-# statically...
-[target."cfg(not(windows))".dependencies]
-openssl = { version = "0.10", features = ["vendored"] }
-# ...except on Windows to avoid having to deal with getting CI past a build-time
-# Perl dependency
-[target."cfg(windows)".dependencies]
 openssl = { version = "0.10", features = [] }
 
 [lib]
